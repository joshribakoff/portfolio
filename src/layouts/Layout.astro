---
import { routes } from '../lib/routes';

interface Props {
  title?: string;
}

const { title = "Josh Ribakoff" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
    />
  </head>
  <body>
    <header>
      <nav>
        <a class="home-link" href={routes.home()}>
          <span>Josh Ribakoff</span>
        </a>
        <a href={routes.portfolio()}>Portfolio</a>
        <a href={routes.blog.index()}>Blog</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footer-content">
        <span>&copy; {new Date().getFullYear()} Josh Ribakoff</span>
        <div class="footer-links">
          <a href="https://github.com/joshribakoff" target="_blank" rel="noopener">GitHub</a>
          <a href="https://www.linkedin.com/in/josh-ribakoff-9a5948152/" target="_blank" rel="noopener">LinkedIn</a>
          <a href="https://www.youtube.com/c/JoshRibakoff" target="_blank" rel="noopener">YouTube</a>
          <a href="mailto:josh@joshribakoff.com">Email</a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    font-size: 17px;
    line-height: 1.7;
    font-family: "Open Sans", sans-serif;
    background-color: #0a0a0a;
    color: #e0e0e0;
    min-height: 100vh;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  header {
    background-color: #0b0c10;
    padding: 12px 16px;
    border-bottom: 1px solid #1a1a1a;
  }

  header a {
    color: #66fcf1;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  header a:hover {
    color: #9dfff9;
  }

  nav {
    list-style: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    max-width: 960px;
    margin: auto;
    padding: 0;
    gap: 1.5em;
  }

  .home-link {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.75em;
  }

  .home-link span {
    font-family: "Roboto Mono", monospace;
    font-weight: 600;
  }

  
  main {
    max-width: 960px;
    margin: auto;
    padding: 24px 16px;
    flex: 1;
    width: 100%;
  }

  footer {
    background-color: #0b0c10;
    border-top: 1px solid #1a1a1a;
    padding: 24px 16px;
    margin-top: auto;
  }

  .footer-content {
    max-width: 960px;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1em;
  }

  .footer-content span {
    color: #666;
    font-size: 0.9em;
  }

  .footer-links {
    display: flex;
    gap: 1.5em;
  }

  .footer-links a {
    color: #888;
    text-decoration: none;
    font-size: 0.9em;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: #66fcf1;
  }
</style>

<style is:global>
  :root {
    --bg-primary: #0a0a0a;
    --bg-secondary: #111111;
    --bg-card: #151515;
    --text-primary: #e0e0e0;
    --text-secondary: #888888;
    --accent: #66fcf1;
    --accent-hover: #9dfff9;
    --accent-red: #af2222;
    --border: #222222;
  }

  h1,
  h2,
  h3 {
    font-family: "Roboto Mono", monospace;
    color: #ffffff;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 700;
  }

  h3 {
    font-size: 1.1rem;
    font-weight: 600;
  }

  a {
    color: #66fcf1;
  }

  a:hover {
    color: #9dfff9;
  }

  img {
    max-width: 100%;
  }

  p {
    margin-bottom: 1em;
  }

  p:last-child {
    margin-bottom: 0;
  }

  pre {
    padding: 1em;
    background: #1a1a1a;
    overflow-x: auto;
    border-radius: 4px;
    border: 1px solid #2a2a2a;
  }

  code {
    font-family: "Roboto Mono", monospace;
    font-size: 0.9em;
    background: #1a1a1a;
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }

  pre code {
    background: none;
    padding: 0;
  }

  blockquote {
    border-left: 4px solid #66fcf1;
    padding-left: 1em;
    margin: 1em 0;
    font-style: italic;
    color: #aaa;
  }

  hr {
    border: none;
    border-top: 1px solid #222;
    margin: 2em 0;
  }

  ul, ol {
    margin-left: 1.5em;
    margin-bottom: 1em;
  }

  li {
    margin-bottom: 0.5em;
  }
</style>
