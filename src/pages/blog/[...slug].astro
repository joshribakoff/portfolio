---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { routes } from '../../lib/routes';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const sortedPosts = posts.sort((a, b) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );

  return sortedPosts.map((post, index) => ({
    params: { slug: post.id },
    props: {
      post,
      previous: sortedPosts[index + 1] || null,
      next: sortedPosts[index - 1] || null,
    },
  }));
}

const { post, previous, next } = Astro.props;
const { Content } = await render(post);

function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title={`${post.data.title} - Josh Ribakoff`}>
  <article>
    <header>
      <h1>{post.data.title}</h1>
      {post.data.description && <p class="subtitle">{post.data.description}</p>}
      <p class="date">{formatDate(post.data.date)}</p>
    </header>
    <section class="content">
      <Content />
    </section>
    <hr />
  </article>

  <nav>
    <ul>
      <li>
        {previous && (
          <a href={routes.blog.post(previous.id)} rel="prev">
            &larr; {previous.data.title}
          </a>
        )}
      </li>
      <li>
        {next && (
          <a href={routes.blog.post(next.id)} rel="next">
            {next.data.title} &rarr;
          </a>
        )}
      </li>
    </ul>
  </nav>
</Layout>

<style>
  article {
    margin-bottom: 2rem;
  }

  h1 {
    margin-bottom: 0;
  }

  .subtitle {
    color: var(--text-primary);
    font-size: 1.3rem;
    margin: 0.75rem 0 0 0;
    opacity: 0.85;
  }

  .date {
    color: var(--accent);
    font-family: "Roboto Mono", monospace;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .content {
    margin-top: 2rem;
    color: var(--text-primary);
  }

  /* Image styling for MDX content */
  .content :global(img) {
    display: block;
    margin: 1.5rem auto;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    border: 1px solid var(--border);
  }

  /* Side-by-side image pairs */
  .content :global(.image-row) {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap;
    margin: 1.5rem 0;
  }

  .content :global(.image-row img) {
    margin: 0;
    flex: 1 1 auto;
    min-width: 200px;
    max-width: 400px;
  }

  /* Float image left with text wrap */
  .content :global(.image-left) {
    float: left;
    margin: 0.5rem 1.5rem 1rem 0;
    max-width: 300px;
  }

  /* Float image right with text wrap */
  .content :global(.image-right) {
    float: right;
    margin: 0.5rem 0 1rem 1.5rem;
    max-width: 300px;
  }

  /* Clear floats */
  .content :global(.clear) {
    clear: both;
  }

  /* Smaller accent images */
  .content :global(.image-small) {
    max-width: 350px;
  }

  /* Medium images */
  .content :global(.image-medium) {
    max-width: 500px;
  }

  @media (max-width: 600px) {
    .content :global(.image-left),
    .content :global(.image-right) {
      float: none;
      margin: 1.5rem auto;
      max-width: 100%;
    }

    .content :global(.image-row) {
      flex-direction: column;
      align-items: center;
    }

    .content :global(.image-row img) {
      max-width: 100%;
    }
  }

  nav {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1rem 1.5rem;
  }

  nav ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 1rem;
  }

  nav li {
    margin: 0;
  }

  nav a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.9rem;
  }

  nav a:hover {
    color: var(--accent);
  }
</style>
