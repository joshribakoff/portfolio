---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { routes } from '../../lib/routes';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const sortedPosts = posts.sort((a, b) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );

  return sortedPosts.map((post, index) => ({
    params: { slug: post.id },
    props: {
      post,
      previous: sortedPosts[index + 1] || null,
      next: sortedPosts[index - 1] || null,
    },
  }));
}

const { post, previous, next } = Astro.props;
const { Content } = await render(post);

function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title={`${post.data.title} - Josh Ribakoff`}>
  <article>
    <header>
      <h1>{post.data.title}</h1>
      <p class="date">{formatDate(post.data.date)}</p>
    </header>
    <section class="content">
      <Content />
    </section>
    <hr />
  </article>

  <nav>
    <ul>
      <li>
        {previous && (
          <a href={routes.blog.post(previous.id)} rel="prev">
            &larr; {previous.data.title}
          </a>
        )}
      </li>
      <li>
        {next && (
          <a href={routes.blog.post(next.id)} rel="next">
            {next.data.title} &rarr;
          </a>
        )}
      </li>
    </ul>
  </nav>
</Layout>

<style>
  article {
    margin-bottom: 2rem;
  }

  h1 {
    margin-bottom: 0;
  }

  .date {
    color: var(--accent);
    font-family: "Roboto Mono", monospace;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .content {
    margin-top: 2rem;
    color: var(--text-primary);
  }

  nav {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1rem 1.5rem;
  }

  nav ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 1rem;
  }

  nav li {
    margin: 0;
  }

  nav a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.9rem;
  }

  nav a:hover {
    color: var(--accent);
  }
</style>
