              <a class="tag" href="https://www.vagrantup.com/" target="_blank">Vagrant</a>
              <a class="tag" href="https://www.ansible.com/" target="_blank">Ansible</a>
              <a class="tag" href="https://aws.amazon.com/" target="_blank">AWS</a>
              <a class="tag" href="https://www.mongodb.com/" target="_blank">Mongo</a>
              <a class="tag" href="https://www.mysql.com/" target="_blank">Mysql</a>
              <a class="tag" href="https://nodejs.org/en/" target="_blank">NodeJS</a>
              <a class="tag" href="http://php.net/" target="_blank">PHP</a>
              <a class="tag" href="https://symfony.com/" target="_blank">Symfony</a>
              <a class="tag" href="https://silex.symfony.com/" target="_blank">Silex</a>
              <a class="tag" href="https://angularjs.org/" target="_blank">Angular JS</a>
