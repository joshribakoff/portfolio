</Layout>

<style>
  .page {
    padding: 1.25rem 1rem;
  }

  .timeline {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .element {
    position: relative;
    overflow: hidden;
    display: block;
    margin: 0;
    padding: 0;
  }

  .divider {
    border-bottom: 1px solid #ddd;
    margin-left: 160px;
    height: 30px;
    margin-bottom: 30px;
    clear: both;
  }

  .time {
    line-height: 1.5;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: 100px;
    padding: 30px 15px;
    padding-top: 0;
    color: #999;
    text-align: right;
    font-style: italic;
    border-right: 1px solid #ddd;
  }

  .label {
    display: block;
    font-family: Roboto, sans-serif;
    position: relative;
  }

  .label::after {
    content: " ";
    position: absolute;
    top: 12px;
    right: -17.5px;
    display: block;
    width: 5px;
    height: 5px;
    background-color: rgba(187, 30, 30, 0.8);
  }

  .contents {
    margin-left: 150px;
  }

  .description {
    font-family: Roboto, sans-serif;
  }

  .description h2 {
    margin-top: 0;
  }

  .photo img {
    max-width: 100%;
  }

  @media (min-width: 1000px) {
    .description {
      float: left;
      width: 50%;
    }

    .photo {
      float: left;
      width: 50%;
    }
  }

  .button {
    display: inline-block;
    margin-top: 10px;
    background-color: #af2222;
    border: 1px solid #9a1e1e;
    color: #fff;
    padding: 0.7em 1.2em;
    text-shadow: none;
    background-image: none;
    text-decoration: none;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
  }

  .tag {
    display: inline-block;
    background-color: rgba(175, 34, 34, 0.8);
    color: #fff;
    padding: 4px 10px;
    font-size: 13px;
    text-transform: uppercase;
    text-shadow: none;
    background-image: none;
    text-decoration: none;
  }
</style>
